<div class="top">
	<h1>Create New Contact</h1>

	<div>
		<form action="/contacts" method="post">		
			
			<label for="first">First Name:</label>
			<input id="first" type="text" name="first_name" placeholder="eg. Darth">
				</br>

			<label for="last">Last Name:</label>
			<input id="last" type="text" name="last_name" placeholder="eg. Vader">
				</br>

			<label for="email">Email:</label>
			<input id="email" type="text" name="email" placeholder="eg. DieLuke@jarjar.com">
				</br>

			<label for="note">Notes:</label>
			<input id="note" type="text" name="note" placeholder="eg. Dark lord">
				</br>

			<input type="submit" name="Submit">
		</form>
	</div>
</div>